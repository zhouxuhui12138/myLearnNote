/* swiper */
.swiper {
  width: 100%;
  height: 300rpx;
}

.swiper image {
  width: 100%;
  height: 100%;
}

/* nav */
.nav {
  display: flex;
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
  font-size: 26rpx;
}

.iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  margin: 20rpx 0;
  background-color: rgb(240, 19, 19);
  color: #fff;
}

/* 推荐歌曲 */
.recommend {
  padding: 20rpx;
}

.scroll {
  display: flex;
  height: 280rpx;
}

.scroll-item {
  width: 200rpx;
  margin-right: 20rpx;
}

.scroll-item image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.scroll-item text {
  font-size: 26rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/* 排行榜 */
.top-list {
  padding: 20rpx;
}

.top-list-swiper {
  height: 420rpx;
}

.top-list-swiper swiper-item {
  width: 90%;
  background-color: #fcfcfc;
}

.top-list-swiper .title {
  font-size: 30rpx;
  line-height: 80rpx;
}

.music-item {
  display: flex;
  margin-bottom: 20rpx;
}

.music-item image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}

.music-item .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #e14b30;
}

.music-item .name {
  height: 100rpx;
  width: 300rpx;
  line-height: 100rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
