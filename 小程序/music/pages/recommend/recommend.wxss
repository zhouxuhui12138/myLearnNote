/* 头部 */
.recommend .header {
  position: relative;
  width: 100%;
  height: 300rpx;
}

.recommend .header image {
  width: 100%;
  height: 100%;
}

.recommend .header .date {
  position: absolute;
  transform: translate(-48%, -35%);
  top: 50%;
  left: 50%;
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
}


/* 列表区域 */
.list {
  position: relative;
  padding: 0 20rpx;
  border-radius: 30rpx;
  top: -20rpx;
  background-color: #fff;
}

.list .header {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.scroll-list {
  height: calc(100vh - 380rpx);
}

.list-item {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.list-item image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.list-item .iconfont {
  margin-left: auto;
}

.list-item .music-info {
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
}

.list-item .music-info text {
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  max-width: 500rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
