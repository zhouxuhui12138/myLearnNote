/* 头部 */
.video .header {
  display: flex;
  margin-top: 10rpx;
  padding: 0 10rpx;
}

.video .header image {
  width: 60rpx;
  height: 60rpx;
}

.video .header .search {
  flex: 1;
  text-align: center;
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #ccc;
  border-radius: 40rpx;
  margin: 0 20rpx;
  color: #e14b30;
}


/* 导航栏 */
.nav-scroll {
  display: flex;
  /* 不允许换行 */
  white-space: nowrap;
  margin-top: 20rpx;
  height: 72rpx;
}

.nav-scroll .nav-item {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
}

.active {
  border-bottom: 4rpx solid #dc4c33;
}

/* 视频区域 */
.scroll-video {
  margin-top: 20rpx;
  height: calc(100vh - 162rpx);
}

.video-item {
  padding: 0 3%;
  margin-bottom: 18rpx;
}

.video-item video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.video-item image {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}

.video-item .content {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #666;
}

